<p style="color: green"><%= notice %></p>

<h1>Profiles</h1>

<div id="profiles">
  <% @profiles.each do |profile| %>
    <% if profile.ispublic %>
      <%= render profile %>
      <p>
        <%= link_to "Show this profile", profile %>
      </p>
    <% end %>
  <% end %>
</div>

