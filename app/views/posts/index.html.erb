<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <% if post.profile.ispublic || current_user.profile.friends.include?(post.profile) || post.profile == current_user.profile %>
    <%= render post %>
    <% end %>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
