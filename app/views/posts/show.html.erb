<p style="color: green"><%= notice %></p>

<%= render @post %>

<script>
  $(document).ready(function() {
    $('#viewpost').hide();
  });
  $('#viewpost').hide();
</script>


<div>
  <% if current_user.profile == @post.profile %>
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-success" %> |
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger", style: "flex-direction: inline" %>
  <% end %>
    <%= link_to "Back to posts", posts_path %>

</div>
